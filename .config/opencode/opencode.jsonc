{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "messages_half_page_down": "<leader>j",
    "messages_half_page_up": "<leader>k"
  },
  "permission": {
    "read": "allow",
    "bash": {
      "ls *": "allow",
      "cat *": "allow",
      "pwd *": "allow",
      "cd *": "allow",
      "echo *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "tree *": "allow",
      "find *": "allow",
      "glob *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "wc *": "allow",
      "stat *": "allow",
      "file *": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git show *": "allow",
