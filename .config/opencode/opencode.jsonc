      "git rev-parse *": "allow",
      "which *": "allow",
      "where *": "allow",
      "dirname *": "allow",
      "basename *": "allow",
      "realpath *": "allow",
      "env *": "allow",
      "printenv *": "allow",
      "type *": "allow",
      "uname *": "allow",
      "*": "ask"
    },
    "edit": "ask",
    "write": "ask"
  },
  "theme": "neonchalk",
  "agent": {
    "analyze": {
      "description": "Analyzes code and provides insights without making any changes. Always asks questions for clarification if needed. Provides detailed explanations and reasoning behind the analysis.",
      "mode": "primary",
      "color": "#82cb4d",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false
      },
      "permission": {
        "write": "deny",
        "edit": "deny",
        "bash": {
          "ls *": "allow",
          "cat *": "allow",
          "head *": "allow",
          "tail *": "allow",
          "tree *": "allow",
          "find *": "allow",
          "glob *": "allow",
          "grep *": "allow",
          "rg *": "allow",
          "wc *": "allow",
          "stat *": "allow",
          "file *": "allow",
          "pwd *": "allow",
          "git log *": "allow",
          "git diff *": "allow",
          "git show *": "allow",
          "git blame *": "allow",
