          "where *": "allow",
          "dirname *": "allow",
          "basename *": "allow",
          "realpath *": "allow",
          "env *": "allow",
          "printenv *": "allow",
          "type *": "allow",
          "uname *": "allow",
          "*": "ask"
        }
      }
    },
    "vibe": {
      "mode": "primary",
      "color": "#e8212f",
