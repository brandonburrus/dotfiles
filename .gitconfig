[user]
	name = Brandon Burrus
	email = brandon@burrus.io
[core]
	ignorecase = false
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
[pull]
	rebase = true
[credential]
	helper = osxkeychain
[mergetool]
	keepBackup = false
[init]
	defaultBranch = main
[interactive]
	diffFilter = diff-so-fancy --patch
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "https://github.com/"]
	insteadOf = gh:
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = cyan
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = cyan bold
[color "status"]
    added = cyan bold
    changed = cyan
    untracked = red bold
[hub]
	protocol = https
